
@model Queue.ViewModels.AlertModuleViewModel

@{ ViewBag.Title = "Alertas";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="row justify-content-center" id="alert">
    <div class="col-lg-12">
        <div class="card">
            <div class="box-header with-border">
                <h4 class="box-title">Alertas</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                    </div>
                </div>
                <br />

                <!--
                @using (Html.BeginForm("Alertas", "Operation"))
                {
                    <div class="col-lg-3">
                        <br />
                        <button class="btn-sm btn-info btn-block" data-toggle="tooltip" data-placement="right" type="submit">
                            <strong>Consultar</strong>
                        </button>
                    </div>
                }
                -->

                <form asp-controller="Operation" asp-action="Alertas" method="post" id="alertform" role="form">
                    <div class="row">
                        <div class="col-lg-4" id="select">
                            <label asp-for="Id" class="control-label">Alertas</label>
                            <span asp-validation-for="Id" class="text-danger"></span>
                            @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control", style = "width:100%;", required = "required", onchange = "getlist()" })
                        </div>

                        <div class="col-lg-4">
                            @Html.LabelFor(model => model.AlertAsociados.Email, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                @Html.EditorFor(model => model.AlertAsociados.Email, new { htmlAttributes = new { @class = "form-control required", placeholder = "Registro de correo", @type = "email" } })
                                @Html.ValidationMessageFor(model => model.AlertAsociados.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <br />
                            <div class="d-flex flex-row-reverse">
                                <button class="btn-sm btn-info btn-block" formaction="AlertasCreate" type="submit">Agregar</button>
                            </div>
                        </div>
                    </div>
                </form>

                <br />
                <br />
                <br />
                <br />
                <div class="table-responsive">
                    <table id="myTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="text-align:center">
                                    Correo
                                </th>
                                <th style="text-align:center">
                                    Alerta
                                </th>
                                <th style="text-align:center">
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model.AlertListViewModel)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.mail)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.alert)
                                        </td>

                                        @using (Html.BeginForm("Delete", "Operation", new { id = item.id }))
                                        {
                                            <td style="text-align:center">
                                                <button class="btn btn-outline-secondary" type="submit"><i class="fa fa-trash"></i></button>
                                            </td>
                                        }

                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
    <script type="text/javascript" src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <script src="~/assets/plugins/general/moment/min/moment.min.js" type="text/javascript"></script>
    <script src="~/js/DownloadsPDF.js"></script>
    <script>$('#myTable').DataTable();</script>
}

<script src="~/assets/vendor_components/jquery-3.3.1/jquery-3.3.1.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        $('#select').on('change', function () {
            var id = $("#Id").val()
            $.ajax({
                url: '@Url.Action(actionName: "Alertas", controllerName: "Operation")',
                type: 'Post',
                data: { id: id },
                cache: false,
                success: function (result) {
                    //fill table
                }
            });
        })
    });

    function getlist() {
        $("#AlertAsociados_Email").val("")
        $("#alertform").submit();
    }

</script>


