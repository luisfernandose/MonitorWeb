@model Queue.Models.Agent_GroupHoraryDetail

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id_GroupHoraryDetail)
    @Html.HiddenFor(m => m.Id_GroupHorary)

    <div id="divblock" class="row">
        <div class="col-lg-12 col-12">

            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">Editar Jornada</h4>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "Agent_GroupHoraryDetail", new { id = ViewBag.IdGroupHorary })" class="btn btn-info btn-block m-t-10 float-right">
                        <i></i> Back
                    </a>
                </div>

                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Day, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EnumDropDownListFor(model => model.Day, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.HourFrom, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.HourFrom, new { htmlAttributes = new { @class = "form-control", @type = "time", @Value = Model.HourFrom.ToString("HH:mm") } })
                                    @Html.ValidationMessageFor(model => model.HourFrom, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.HourUntil, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.HourUntil, new { htmlAttributes = new { @class = "form-control", @type = "time", @Value = Model.HourUntil.ToString("HH:mm:ss") } })
                                    @Html.ValidationMessageFor(model => model.HourUntil, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EnumDropDownListFor(model => model.Type, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="d-flex flex-row-reverse">
                            <div class="p-2">
                                <button id="edit" name="add_dictionary" type="submit" value="Create" class="btn btn-warning waves-effect waves-light btn-block">
                                    Edit
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}